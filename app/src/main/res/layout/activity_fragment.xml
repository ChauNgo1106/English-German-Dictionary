<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/german_title_text_view"
            android:layout_height="wrap_content"
            android:text="German"
            android:padding="10dp"
            android:textSize="18sp"
            android:layout_width="129sp"

           />

        <TextView
            android:id="@+id/partOfSpeech_text_view"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/german_title_text_view"
            android:text="Part Of Speech"
            android:padding="10dp"
            android:textSize="18sp"
            android:layout_width="130sp"
            />

        <TextView
            android:id="@+id/english_title_text_view"
            android:layout_height="wrap_content"
            android:text="English"
            android:padding="10dp"
            android:textSize="18sp"
            android:layout_width="100sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

</FrameLayout>
